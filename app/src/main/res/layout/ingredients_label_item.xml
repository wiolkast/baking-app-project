<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ingredients_list_label"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:layout_marginBottom="@dimen/ingredients_label_bottom_margin"
        android:layout_marginLeft="@dimen/label_left_margin"
        android:layout_marginStart="@dimen/label_left_margin"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_ingredients"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add_ingredients_to_widget"
        android:background="@drawable/button_custom_shape"
        android:paddingLeft="@dimen/button_padding_small"
        android:paddingRight="@dimen/button_padding_small"
        android:layout_marginRight="@dimen/widget_button_margin_right"
        android:layout_marginEnd="@dimen/widget_button_margin_right"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>